{
  "id": "semantic-repair-en-zh",
  "name": "Unified Semantic Repair Service (EN/ZH + Normalize)",
  "name_zh": "统一语义修复服务（中英文+标准化）",
  "version": "1.0.0",
  "type": "semantic",
  "language": "multi",
  "languages": ["zh", "en"],
  "port": 5015,
  "enabled": true,
  "replaces": ["semantic-repair-zh", "semantic-repair-en", "en-normalize"],
  "gpu_required": true,
  "vram_estimate": 2048,
  "max_concurrency": 1,
  "exec": {
    "command": "python",
    "args": [
      "service.py"
    ],
    "cwd": "."
  },
  "health_check": {
    "endpoint": "/health",
    "timeout_ms": 5000
  },
  "model": {
    "name": "qwen2.5-3b-instruct-multi",
    "type": "llm",
    "quantization": "int4",
    "path": "models"
  },
  "features": {
    "zh_repair": true,
    "en_repair": true,
    "en_normalize": true
  },
  "supported_operations": {
    "zh": ["repair"],
    "en": ["repair", "normalize"]
  },
  "endpoints": [
    {
      "path": "/zh/repair",
      "method": "POST",
      "language": "zh",
      "description": "Chinese semantic repair",
      "description_zh": "中文语义修复"
    },
    {
      "path": "/en/repair",
      "method": "POST",
      "language": "en",
      "description": "English semantic repair",
      "description_zh": "英文语义修复"
    },
    {
      "path": "/en/normalize",
      "method": "POST",
      "language": "en",
      "description": "English text normalization",
      "description_zh": "英文文本标准化"
    },
    {
      "path": "/repair",
      "method": "POST",
      "language": "multi",
      "description": "Unified repair endpoint (ASR compatible)",
      "description_zh": "统一修复端点（ASR兼容）"
    }
  ]
}
