{
  "name": "lingua-electron-node",
  "version": "0.1.0",
  "description": "Lingua 分布式语音翻译系统 - Electron Node 客户端",
  "main": "main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json && node scripts/fix-service-type-export.js",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "test": "jest",
    "test:stage3.1": "jest --config tests/stage3.1/jest.config.js",
    "test:stage3.1:watch": "jest --config tests/stage3.1/jest.config.js --watch",
    "test:stage3.2": "jest --config tests/stage3.2/jest.config.js",
    "test:stage3.2:watch": "jest --config tests/stage3.2/jest.config.js --watch",
    "test:refactor": "jest --config tests/refactor/jest.config.js",
    "test:refactor:watch": "jest --config tests/refactor/jest.config.js --watch",
    "test:integration": "npm run build:main && node tests/stage3.2/integration-test.js",
    "test:integration:ps1": "powershell -ExecutionPolicy Bypass -File tests/stage3.2/run-integration-test.ps1",
    "test:pipeline": "node tests/pipeline-e2e-test-simple.js",
    "clear-cache": "powershell -ExecutionPolicy Bypass -File scripts/clear-cache.ps1"
  },
  "keywords": [
    "electron",
    "speech-translation",
    "distributed-computing"
  ],
  "author": "Lingua Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@minceraftmc/opus-encoder": "^0.0.7-rc.1",
    "adm-zip": "^0.5.10",
    "axios": "^1.0.0",
    "module-alias": "^2.2.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "systeminformation": "^5.0.0",
    "ws": "^8.0.0"
  }
}
