{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./main",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "ws"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "main/src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "renderer",
    "main/src/**/*.test.ts",
    "tests"
  ]
}